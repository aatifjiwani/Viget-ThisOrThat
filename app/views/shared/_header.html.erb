<header class="header">
  <a href="/">
    <%= inline_svg "logo.svg", class: 'header__logo' %>
  </a>
  <ul class="header__utility-nav">
    <% if user_signed_in? %>
      <li class="header__feed"><a href="#TODO">Feed</a></li>
    <% end %>
    <% if user_signed_in? %>
      <li class="header__create">
    <% else %>
      <li class="header__create header__create--fixed">
    <% end %>
      <a href="#TODO">
        <span class="header__create__text--hidden">Create a Poll</span>
        <%= inline_svg "create_poll.svg" %>
      </a>
    </li>
    <% if user_signed_in? %>
      <li class="header__your-polls header__utility-nav--active">
        <a href="#TODO">Your Polls</a>
      </li>
      <li class="header__following">
        <a href="#TODO">Following</a>
      </li>
      <li class="header__username" id="sign-up__toggle">
        <%= current_user.username %>
        <span class="header__username__arrow"></span>
      </li>
    <% else %>
      <li class="header__sign-up" id="sign-up__toggle">
        Sign Up
      </li>
      <li class="header__log-in" id="sign-up__toggle">
        Log in
      </li>
    <% end %>
  </ul>
</header>

