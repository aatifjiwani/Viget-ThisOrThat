<style>
  
/* Styling changes so I can see the images if they're given. Peyton may changes this in the future to his liking */  
#option-a-<%= poll.id %> {
  <% if poll.get_option_a_img.present? %>
    background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(<%= poll.get_option_a_img %>);
    background-size: auto 230px;
    background-position: center;
    background-repeat: no-repeat;
  <% end %>
}
  
#option-b-<%= poll.id %> {
  <% if poll.get_option_b_img.present? %>
    background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(<%= poll.get_option_b_img %>);
    background-size: auto 230px;
    background-position: center;
    background-repeat: no-repeat;
  <% end %>
}
</style>

<article class="poll">
  <div class="poll__meta">
    <p><%= poll.user.username %></p>
    <ul>
      <li><i class="icon-fire"></i><span><%= pluralize(poll.vote_count, "vote") %></span></li>
      <li>
        <% if poll.expired? %> 
          <i class="icon-expired"></i><span>expired</span>
        <% else %>
          <i class="icon-clock"></i><span><%= poll.time_left %> left</span>
        <% end %>
      </li>
    </ul>
  </div>

  <div class="poll__content">
    <h2><%= link_to poll.title, poll %></h2>
    <div class="poll__options">
      <div id="option-a-<%= poll.id %>" class="poll__options__option">
        <%= poll.option_a %>
      </div>
      <div id="option-b-<%= poll.id %>"class="poll__options__option">
        <%= poll.option_b %>
      </div>
    </div>
    <ul class="poll__actions">
      <li class="poll__actions__comments poll__actions__action">
        <a href="#TODO">
          <i class="icon-comment"></i>
          <span><%= link_to pluralize(poll.comment_count, "comment"), poll %></span>
        </a>
      </li>
      <li class="poll__actions__action">
        <%= link_to poll_follows_path(poll), method: :post, remote: true, class: "follow-poll",id: "poll-follow-#{poll.id}" do %>
          <i class="icon-follow"></i>
          <span>follow</span>
        <% end %>
      </li>
      <li class="poll__actions__action">
        <a href="#TODO">
          <i class="icon-link"></i>
          <span>copy link</span>
        </a>
      </li>
    </ul>
  </div>
</article>
