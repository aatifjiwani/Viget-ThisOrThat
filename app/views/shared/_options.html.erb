<% if user_signed_in? %>
    <% if current_user.has_voted?(poll.id) %>
        <%= render 'shared/option-links', poll: poll, method: :put %>
    <% else %>
        <%= render 'shared/option-links', poll: poll, method: :post %>
    <% end %>
<% else %>
    <%= render 'shared/option-links', poll: poll, method: nil %>
<% end %>
