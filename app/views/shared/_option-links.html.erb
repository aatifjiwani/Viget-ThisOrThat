<% if !method.nil? %>
    <%= link_to poll_option_a_path(poll), method: method, id: "option-a-#{poll.id}", class: "option-poll poll__options__option", remote: true do %>
        <% if poll.get_option_a_img.present? %>
        <% else %>
            <%= poll.option_a %>
        <% end %>
    <% end %>

    <% if optionA && optionB %>
      <style>
        #option-a-<%= poll.id %> {
          width: <%= optionA * 100 %>%;
        }

        #option-b-<%= poll.id %> {
          width: <%= optionB * 100 %>%;
        }
      </style>
    <% end %>

    <%= link_to poll_option_b_path(poll), method: method, id: "option-b-#{poll.id}", class: "option-poll poll__options__option", remote: true do %>
        <% if poll.get_option_b_img.present? %>
        <% else %>
            <%= poll.option_b %>
        <% end %>
    <% end %>
<% else %>
    <%= link_to 'javascript:;', method: :get, id: "option-a-#{poll.id}", class: "option-poll poll__options__option", remote:true do %>
        <% if poll.get_option_a_img.present? %>
        <% else %>
            <%= poll.option_a %>
        <% end %>
    <% end %>

    <%= link_to 'javascript:;', method: :get, id: "option-b-#{poll.id}", class: "option-poll poll__options__option", remote:true do %>
        <% if poll.get_option_b_img.present? %>
        <% else %>
            <%= poll.option_b %>
        <% end %>
    <% end %>
<% end %>
