<dialog class="form log-in form--hidden">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, html: {id: "login-form", class: "form__inner"}) do |f| %>
    <div class="form__top">
      <h2 class="form__title">Log in</h2>
      <a href="/" class="form__cancel" data-module="modal" data-modal="log-in">Cancel<i class="icon-expired"></i></a>
    </div>
    <div class="form__fields">
      <!-- Error messages from Devise -->
      <div class="error-messages" id="login-error-messages">
      
      </div>
      
      
        <div class="form__fields__field">
         <%= f.label :email %>
         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form__fields__field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="form__fields__actions log-in__submit">
          <%= f.submit "Log in", class: "form__button" %>
          <a href="#TODO">Forgot Password?</a>
        </div>
      
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </div>
   <% end %>
  <div class="form__bottom-prompt">
    <p>New here?</p>
    <a href="#" data-module="modal" data-modal="sign-up">Sign up</a>
  </div>
</dialog>
